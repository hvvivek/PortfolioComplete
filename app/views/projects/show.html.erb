<div id="project" class="wrapper">
      
      <!-- Sidebar Start -->
      <nav id="sidebar">
        <div class="sidebar-content">
          <a href=<%= projects_path %>>
          <div class="back-arrow">
              <img src="https://s3.us-east-2.amazonaws.com/portfolio-vivek/images/back.jpg" width="75" >
          </div>
          </a>
          <div class="sidebar-header">
            <p><%= link_to "Vivek HV", root_path %></p>
          </div>

          <ul class="sidebar-menu">
            <li><%= link_to "Contact", controller: "projects", action: "contact" %></li>
          </ul>
        </div>
      </nav>

      <nav id="sidebar-mobile" class='col-12'>
        <div class="sidebar-content">
          <div class="sidebar-header">
            <p>Vivek HV</p>
          </div>

          <ul class="sidebar-menu">
            <li><a href="#">Contact</a></li>
          </ul>
        </div>
      </nav>
      <!-- Sidebar End -->

      <!-- Content Start -->
      <div class="content" id="style-3">
        <div class="row1">

            <div class="card">
                <!-- <p class="side-text">01 Atelier</p> -->
                <div class="wrapper-rhs">
                  <div class="img-container">
                    <img class="img-card" src='<%= @project.thumb_img %>' target='vid-1' toggle="img-1">
                    <video class="vid-card"  width="400" height="400" target='img-1' toggle="vid-1"  loop>
                        <source src="<%= @project.thumb_vid %>" type="video/mp4" autoplay>
                        Your browser does not support HTML5 video.
                    </video>
                  </div>
    
                  <div class="text-wrapper">
                    <p class="sub-text-1"><%= @project.period %> <br> <%= @project.location %></p>

                    
                    <% if !@project.instructors.nil? %>
                      <p class="sub-text-1">Instructor(s)/Professor(s):<br> 
                      <% @project.instructors.each_with_index do |instructor, index| %>
                        <% if index > 0 %>
                        , 
                        <% end %>
                        <a href="<%= instructor.link %>"><%= instructor.name %></a>
                      <% end %>
                      </p>
                    <% end %>

                    <% if !@project.collaborators.nil? %>
                      <p class="sub-text-1">Collaborator(s):<br> 
                      <% @project.collaborators.each_with_index do |collaborator, index| %>
                        <% if index > 0 %>
                        , 
                        <% end %>
                        <a href="<%= collaborator.link %>"><%= collaborator.name %></a>
                      <% end %>
                      </p>
                    <% end %>    
                  </div>
                </div>
              </div>

              <div class="card2">
                <!-- <p class="side-text">01 Atelier</p> -->
                <div class="wrapper-rhs">
                  <div class="text-wrapper">
                    <h3 class="title"><%= @project.title %></h3>
                    <p class="short-desc"><%= @project.short_desc %></p>
                    <div class="long-desc"><%= @project.long_desc.html_safe %></div>
                </div>
                </div>
              </div>

              <% if !@project.media.nil? %>
                <% count = 0 %>
                <% @project.media.each_with_index do |medium, index| %>

                  <% if medium.aspect == 0 %>
                      <% if count == 0 %>
                        <div class="card2">
                        <% if medium.mediatype == 'Image' %>
                          <img class="img-card-extra" src="<%= medium.link %>" >
                        <% end %>
                        <% if medium.mediatype == 'Video' %>
                          <video width="480" muted <% if(medium.autoplay > 0 ) %> autoplay loop <% end %> >
                              <source src="<%= medium.link %>" type="video/mp4" >
                              Your browser does not support HTML5 video.
                          </video>
                        <% end %>
                        <% count += 1 %>
                      <% else %>
                        <% if medium.mediatype == 'Image' %>
                          <img class="img-card-extra" src="<%= medium.link %>" >
                        <% end %>
                        <% if medium.mediatype == 'Video' %>
                          <video width="480" muted <% if(medium.autoplay > 0 ) %> autoplay loop <% end %> >
                              <source src="<%= medium.link %>" type="video/mp4" >
                              Your browser does not support HTML5 video.
                          </video>
                        <% end %>
                        </div>
                        <% count = 0 %>
                      <% end %>
                  <% end %>

                  <% if medium.aspect == 1 %>
                    <div class="card3">
                      <% if medium.mediatype == 'Image' %>
                        <img class="img-card-extra2" src="<%= medium.link %>" >
                      <% end %>
                      <% if medium.mediatype == 'Video' %>
                        <video width="570" muted <% if(medium.autoplay > 0 ) %> autoplay loop <% end %> >
                            <source src="<%= medium.link %>" type="video/mp4" >
                            Your browser does not support HTML5 video.
                        </video>
                      <% end %>
                    </div>
                  <% end %>

                <% end %>
              <% end %>  
        </div>
      </div>
      <!-- Content End -->