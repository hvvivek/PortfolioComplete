<p id="notice"><%= notice %></p>

<h1>Projects</h1>
<div id="tag_cloud">
  <% tag_cloud Project.tag_counts, %w[s m l] do |tag, css_class| %>
    <%= link_to tag.name, tag_path(tag.name), class: css_class %>
  <% end %>
</div>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Thumb img</th>
      <th>Thumb vid</th>
      <th>Short desc</th>
      <th>Location</th>
      <th>Period</th>
      <th>Date</th>
      <th>Long desc</th>
      <th>Recognition</th>
      <th>Role</th>
      <th>Views</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.title %></td>
        <td><%= project.thumb_img %></td>
        <td><%= project.thumb_vid %></td>
        <td><%= project.short_desc %></td>
        <td><%= project.location %></td>
        <td><%= project.period %></td>
        <td><%= project.date %></td>
        <td><%= project.long_desc %></td>
        <td><%= project.recognition %></td>
        <td><%= project.role %></td>
        <td><%= project.views %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project', new_project_path %>
