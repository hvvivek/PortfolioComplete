<p id="notice"><%= notice %></p>

<h1>Media</h1>

<table>
  <thead>
    <tr>
      <th>Caption</th>
      <th>Link</th>
      <th>Credits</th>
      <th>Type</th>
      <th>Order</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @media.each do |medium| %>
      <tr>
        <td><%= medium.caption %></td>
        <td><%= medium.link %></td>
        <td><%= medium.credits %></td>
        <td><%= medium.type %></td>
        <td><%= medium.order %></td>
        <td><%= medium.project %></td>
        <td><%= link_to 'Show', medium %></td>
        <td><%= link_to 'Edit', edit_medium_path(medium) %></td>
        <td><%= link_to 'Destroy', medium, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

